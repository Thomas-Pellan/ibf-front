---
import Layout from '../layouts/Layout.astro'
import Title from '../components/Title.astro'
import Section from '../components/Section.astro'
import Separator from '../components/Separator.astro'
import Seo from '../class/Seo'
import Image from '../class/Image'
import ReturnAction from '../class/ReturnAction'
import ButtonAction from '../class/ButtonAction'

const returnValues: ReturnAction = new ReturnAction('/company', 'Entreprises')
const firstImage: Image = new Image('/img/company-400x320.webp', 'Camille Marzec fondatrice', 400, 320)
const secondImage: Image = new Image('/img/company-mouz-320x320.webp', 'Camille Marzec fondatrice', null, null)
const firstSubTitle: string = 'Pour vous permettre de :'
const secondSubTitle: string = ' Définissez vos leviers d\'actions'
const actions: ButtonAction[] = [new ButtonAction(
    '/pricing-training',
    'Formations'
    ),
    new ButtonAction(
        '/contact',
        'Demandez votre devis gratuit'
    )]
const seoData: Seo = new Seo('IBF Equicoaching | Formations et team buidling pour entreprises\'', 'Entreprises, découvrez nos prestations de developpement personnel sur mesure entre Grenoble et Chambéry !', false);
---
<Layout title="IBF Equicoaching | Entreprise" seoData={seoData}>
    <main>
        <Title title="L\'équicoaching en entreprise" returnValues={returnValues}/>
        <Section subTitle={firstSubTitle} displayTextLeft="true" imgContent={firstImage}>
            <h2 slot="section-title">Une approche innovante</h2>
            <ul slot="section-content">
                <li>Développer vos Soft Skills</li>
                <li>Renforcer / Developper la cohésion de groupe</li>
                <li>Intégrer de nouveaux collaborateurs</li>
                <li>Expérimenter de nouvelles stratégies de vente</li>
                <li>Developper votre leadership</li>
                <li>Developper votre intelligence émotionnelle</li>
                <li>Trouver votre place au sein d'une équipe, de votre entreprise</li>
                <li>Expérimenter différents types de communications</li>
                <li>Prendre conscience de vos points forts et vos points faibles, et mettre en place des stratégies pour
                    atteindre vos objectifs
                </li>
            </ul>
        </Section>
        <Separator/>
        <Section subTitle={secondSubTitle} imgContent={secondImage} actions={actions}>
            <h3 slot="section-title">Actions possibles </h3>
            <ul slot="section-content">
                <li>Suivi individuel du collaborateur</li>
                <li>Groupes de 2 à 6 personnes à la journée ou demi journée</li>
                <li>Groupes de 10 personnes et plus, à la journée ou sur deux jours</li>
            </ul>
        </Section>
    </main>
</Layout>
